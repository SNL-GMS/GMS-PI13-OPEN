{
  "name": "@gms/api-gateway",
  "version": "0.1.0",
  "description": "GMS API Gateway",
  "author": "GMS Development Team",
  "license": "UNLICENSED",
  "files": [
    "dist"
  ],
  "main": "dist/api-gateway.js",
  "scripts": {
    "clean:node_modules": "rimraf node_modules/",
    "clean:build-scripts": "rimraf webpack-config/",
    "clean:dist": "rimraf build/ && rimraf dist/ && rimraf lib/ && rimraf bundle-analyzer/",
    "clean:coverage": "rimraf coverage/",
    "clean:docs": "rimraf docs/",
    "clean": "npm-run-all -p clean:build-scripts clean:dist clean:coverage clean:docs -p clean:node_modules",
    "build:build-scripts": "yarn clean:build-scripts && cp -R ../../../webpack-config/ ./webpack-config/",
    "build:tslint": "yarn tslint --project ./tsconfig.json --config ./tslint.json 'src/**/*.{ts,tsx}' --fix",
    "build:tslint:test": "yarn tslint --project ./tsconfig-test.json --config ./tslint.json '{__tests__,__mocks__,__integration-tests__}/**/*.{ts,tsx}' --fix",
    "build:tsc-defs": "tsc --project ./tsconfig.json --emitDeclarationOnly",
    "build:tsc:dev": "tsc --project ./tsconfig.json --sourceMap true --declaration true --declarationMap true",
    "build:tsc:prod": "tsc --project ./tsconfig.json --sourceMap false --declaration true --declarationMap false",
    "build:tsc:test": "tsc --project ./tsconfig-test.json",
    "build:webpack:dev": "webpack --colors --env.development --config webpack.config.ts",
    "build:webpack:prod": "webpack --colors --env.production --config webpack.config.ts",
    "build:webpack:dev:soh": "webpack --colors --env.development --env.soh --config webpack.config.ts",
    "build:webpack:prod:soh": "webpack --colors --env.production --env.soh --config webpack.config.ts",
    "build:dev": "npm-run-all -p clean:dist build:build-scripts -p build:tsc:dev",
    "build:prod": "npm-run-all -p clean:dist build:build-scripts -p build:tsc:prod",
    "build": "yarn build:dev",
    "bundle:dev:soh": "yarn build:webpack:dev:soh",
    "bundle:prod:soh": "yarn build:webpack:prod:soh",
    "bundle:dev": "npm-run-all -p build:webpack:dev",
    "bundle:prod": "npm-run-all -p build:webpack:prod",
    "bundle": "yarn bundle:dev",
    "dev": "yarn build:webpack:dev:soh && cross-env NODE_ENV=development node --max-old-space-size=8142 --inspect-brk --harmony --nolazy ./dist/api-soh-gateway.js",
    "dev:all": "yarn build:webpack:dev && cross-env NODE_ENV=development node --max-old-space-size=8142 --inspect-brk --harmony --nolazy ./dist/api-gateway.js",
    "start": "yarn build:webpack:prod:soh && cross-env NODE_ENV=production node --max-old-space-size=8142 ./dist/api-soh-gateway.js",
    "start:all": "yarn build:webpack:prod && cross-env NODE_ENV=production node --max-old-space-size=8142 ./dist/api-gateway.js",
    "start-ssl": "yarn build:webpack:prod:soh && cross-env NODE_ENV=production SSL=true node --max-old-space-size=8142 ./dist/api-soh-gateway.js",
    "start-ssl:all": "yarn build:webpack:prod && cross-env NODE_ENV=production SSL=true node --max-old-space-size=8142 ./dist/api-gateway.js",
    "docs": "yarn clean:docs && typedoc --out docs/ts . && mkdirp build && concat -o build/merged-schema.graphql resources/graphql/channel-segment/schema.graphql resources/graphql/common/schema.graphql resources/graphql/data-acquisition/schema.graphql resources/graphql/event/schema.graphql resources/graphql/qc-mask/schema.graphql resources/graphql/signal-detection/schema.graphql resources/graphql/station/schema.graphql resources/graphql/waveform/schema.graphql resources/graphql/waveform-filter-definition/schema.graphql resources/graphql/workflow/schema.graphql && graphdoc --force --output docs/graphql --schema build/merged-schema.graphql",
    "sonar": "echo \"run 'yarn sonar' from the top-level directory\"",
    "test": "yarn test:dev",
    "test:dev": "yarn build:tsc:test && NODE_CONFIG_ENV=test jest --config jest.config.js --verbose=true --bail=true --maxWorkers=4",
    "test:prod": "yarn build:tsc:test && NODE_CONFIG_ENV=test jest --config jest.config.js --verbose=false --bail=true --maxWorkers=4",
    "version": "echo $npm_package_version"
  },
  "keywords": [],
  "devDependencies": {
    "@2fd/graphdoc": "2.4.0",
    "@types/case-sensitive-paths-webpack-plugin": "2.1.4",
    "@types/circular-dependency-plugin": "5.0.0",
    "@types/copy-webpack-plugin": "5.0.0",
    "@types/express": "4.17.2",
    "@types/express-session": "1.15.16",
    "@types/fork-ts-checker-webpack-plugin": "0.4.5",
    "@types/graphql": "14.5.0",
    "@types/jest": "24.0.23",
